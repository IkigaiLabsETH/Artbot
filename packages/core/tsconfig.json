{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2021",
        "lib": ["ES2021", "DOM"],
        "allowImportingTsExtensions": true,
        "emitDeclarationOnly": true,
        "composite": true,
        "declaration": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "customConditions": ["@elizaos/source"],
        "strict": false
    },
    "include": ["src/**/*"]
}
